{
  "manifest_version": 2,
  "name": "Jazz Notifier",
  "version": "0.1",

  "description": "Jazz Notifier",
  "icons": { "128" : "images/RTC_24.png"},
  "homepage_url": "http://jazz.net/",
  "options_page": "options.html",
	"background": {
		
		"scripts": ["scripts/jquery-1.6.1.min.js", "scripts/parse.js", "background.js"]
	},
	"permissions": [
	  "https://*/*",
	  "background",
	  "notifications"
	],
	"browser_action": {
    "default_icon": "images/icon.png", 
    "default_title": "Jazz Notifier",      
    "default_popup": "popup.html"       
  }
}